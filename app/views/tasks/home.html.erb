<div class="row-fluid">
  <div class="span10 offset1">
    <div class="hero-unit">
      <h1>ToDo</h1>
      <p>Welcome to the tutorial's ToDo application</p>
      <%= link_to 'Add Task', new_task_path, class: 'btn btn-primary',  remote: true %>
      <div class="new-task"></div>
    </div>
  </div>
</div>
<div class = "container">
  <% if @task.empty? %>
  <span class = "text-warning">
    There are no tasks!
  </span>
  <% else %>
    <table class = "table table-hover table-bordered">
      <thead>
      <tr>
        <th> Title</th>
        <th> Created at </th>
        <th> Completed </th>
      </tr>
      </thead>

      <tbody>
      <% @task.each do |task| %>
        <tr>
          <td><strong><%= task.title %></strong></td>
          <td text-info><%= task.created_at %></td>
          <td text-success><%= task.completed %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</div>